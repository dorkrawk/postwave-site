<div id="post">
  <h2><%= @post.title %></h2>
  <div class="post-meta">
    <div class="post-date"><%= @post.date.strftime("%B %e, %Y") %></div>
    <div class="post-tags">
      <% @post.tags.each do |tag| %>
        <a href="/tags/<%= tag %>"><%= tag %></a>
      <% end %>
    </div>
  </div>
  <div class="post-content">
    <%= @post.body_html %>
  </div>
</div>

